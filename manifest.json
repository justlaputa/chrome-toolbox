{
  "manifest_version": 3,

  "name": "Mytools",
  "description": "Mytools is a chrome extension that provides some useful tools",
  "version": "1.0",

  "action": {
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "commands": {
    "goto-google-tab": {
      "description": "jump to an opened google tab and start search",
      "suggested_key": {
        "default": "Ctrl+I"
      }
    },
    "sort-tabs-by-url": {
      "description": "sort tabs by url",
      "suggested_key": {
        "default": "Ctrl+U"
      }
    },
    "move-to-head": {
      "description": "move current tab to head",
      "suggested_key": {
        "default": "Ctrl+J"
      }
    },
    "highlight-links": {
      "description": "highlight links on current page",
      "suggested_key": {
        "default": "Ctrl+K"
      }
    },
    "confluence-extract": {
      "description": "extract title and link from Confluence page and copy to clipboard"
    }
  }
}
